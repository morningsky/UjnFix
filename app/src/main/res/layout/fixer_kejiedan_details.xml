<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="firefly.ujnfix.fixer.view.FixerDetailsActivity">



        <LinearLayout
            android:id="@+id/linerlayout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/abc_action_button_min_width_overflow_material"
                    android:layout_height="@dimen/abc_action_button_min_width_overflow_material"
                    android:layout_gravity="center"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/Base.Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/abc_action_button_min_width_overflow_material"
                        android:layout_height="@dimen/abc_action_button_min_width_overflow_material"
                        android:src="@drawable/scene"
                        />

                    <TextView
                        android:id="@+id/tv_scene"
                        style="@style/Base.Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/abc_action_button_min_width_overflow_material"
                        android:layout_height="@dimen/abc_action_button_min_width_overflow_material"
                        android:layout_gravity="center"

                        android:src="@drawable/tag" />

                    <TextView
                        android:id="@+id/tv_tag"
                        style="@style/Base.Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/iv_imagefile"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="维修状态:" />

                <ImageView
                    android:id="@+id/fixer_iv_state"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="用户姓名:" />

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/Base.Widget.AppCompat.EditText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<TextView
    android:padding="15dp"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="用户电话："/>
<TextView
    android:id="@+id/tv_userphone"
    style="@style/Base.Widget.AppCompat.EditText"
    android:layout_width="150dp"
    android:layout_height="wrap_content"

    />
                <ImageView
                    android:id="@+id/fix_iv_call"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/call"/>
            </LinearLayout>
<Button
    android:id="@+id/btn_jiedan"
    android:background="@drawable/buttonshape"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="我 要 接 单"
    android:layout_gravity="center"
    />
            <Button
                android:id="@+id/btn_finish"
                android:background="@drawable/buttonshape"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="我 已 完 成"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </ScrollView>

